<div class="row">
	<div class="col-md-6">
		<div class="well well-f">
			<%= form_for [@image.category, @image], multiple: true do |f| %>
		    <div class="form-group">
					<%= f.label :photo %>
			    <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png,image/jpg' %>
		    </div>
				<div class="form-group">
					<%= f.label :Name %>
			    <%= f.text_field :i_name, class: 'form-inline' %>
			    
					<%= f.label :Price %>
			    <%= f.text_field :price, class: 'form-inline ' %>
		    </div>
		    <div class="form-group">
					<%= f.label :Description %>
			    <%= f.text_area :i_bio, rows: 5, class: 'form-control' %>
		    </div>
		    <div class="form-group">
		    	<%= f.fields_for :sub_images, @sub_images do |builder| %>
						<%= builder.label :small_image %>
				    <%= builder.file_field :small_image, accept: 'image/jpeg,image/gif,image/png,image/jpg', multiple: true, name: "image[sub_images_attributes][][small_image]", id: "upload-image" %>
			    <% end %>
		    </div>
				<div class="form-group">
					<%= f.submit class: 'btn btn-primary' %>
				</div>
			<% end %>
			<script id="template-upload" type="text/x-tmpl">
			<div class="upload">
				{%=o.name%}
				<div class="progress"><div class="bar" style="width: 0%"></div></div>
			</div>
			</script>
		</div>
	</div>
</div>




	